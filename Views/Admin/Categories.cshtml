@model IEnumerable<finalmawjoud_nlh.Models.Category>

@{
    ViewBag.Title = "Categories";
}

<h2>Categories</h2>

{
    <p>
        @Html.ActionLink("Create New", "CreateCategory")
    </p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CategoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsActive)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditCategory", new { id = item.CategoryId }) |
                @Html.ActionLink("Details", "DetailsCategories", new { id = item.CategoryId }) |
                @Html.ActionLink("Delete", "DeleteCategory", new { id = item.CategoryId })
            </td>
        </tr>
    }

</table>
